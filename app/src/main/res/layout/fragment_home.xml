<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oleksandr.spacejoystick.com.zemian.spacejoystick.HomeActivity$PlaceholderFragment"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/connection_screen_news"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="15sp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/ip_text"
                android:layout_alignEnd="@+id/btnConnect"
                android:layout_alignStart="@+id/btnConnect"
                android:inputType="text"
                android:textColor="@color/colorAccent"
                android:hint="Type game IP here"
                android:textAlignment="center" />

            <Button
                android:text="Join the game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnConnect"
                android:background="@color/internalElements"
                android:textColor="@color/colorAccent"
                android:elevation="9dp"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:layout_below="@+id/ip_text"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
