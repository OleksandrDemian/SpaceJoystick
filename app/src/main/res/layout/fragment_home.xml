<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oleksandr.spacejoystick.com.zemian.spacejoystick.HomeActivity$PlaceholderFragment"
    android:background="@color/background">

    <TextView
        android:text="Swipe to ship customization ->"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:layout_alignEnd="@+id/btnConnect"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/ip"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:hint="Type game ip here"
        android:textSize="20sp"
        android:inputType="none"
        android:singleLine="false"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Join the game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConnect"
        android:background="@color/internalElements"
        android:textColor="@color/colorAccent"
        android:elevation="9dp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:layout_below="@+id/ip"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnConnect"
        android:layout_marginTop="12dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/connection_screen_news"
            android:paddingLeft="2sp"
            android:paddingRight="2sp" />
    </ScrollView>

</RelativeLayout>
