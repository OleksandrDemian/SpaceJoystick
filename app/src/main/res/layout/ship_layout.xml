<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:background="@color/internalElements"
        android:elevation="5dp"
        android:layout_margin="5sp">

        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            app:srcCompat="@drawable/ship1"
            android:id="@+id/ship_image"
            android:layout_margin="15sp" />

        <TextView
            android:text="Night Jack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ship_name"
            android:layout_below="@+id/ship_image"
            android:layout_alignStart="@+id/ship_image"
            android:layout_alignEnd="@+id/ship_image"
            android:textAlignment="center"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>
</LinearLayout>
