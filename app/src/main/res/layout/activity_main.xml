<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oleksandr.spacejoystick.com.zemian.spacejoystick.MainActivity"
    android:background="@color/background"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/waitLayout"
        android:visibility="visible"
        android:layout_margin="0dp"
        android:background="@drawable/splash">

        <TextView
            android:text="Wait for start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/joystickLayout"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp">

        <ImageButton
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:id="@+id/btnLeft"
            android:background="@drawable/flatdark23"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:elevation="10dp" />

        <ImageButton
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:id="@+id/btnRight"
            android:background="@drawable/flatdark24"
            android:layout_marginStart="26dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnLeft"
            android:elevation="10dp" />

        <ImageButton
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:id="@+id/btnShoot"
            android:background="@drawable/flatdark48"
            android:elevation="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:id="@+id/btnEngine"
            android:background="@drawable/flatdark49"
            android:elevation="10dp"
            android:layout_above="@+id/btnShoot"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="38dp" />

        <ImageButton
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:id="@+id/btnAbility"
            android:background="@drawable/flatdark35"
            android:elevation="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="53dp"
            android:layout_alignTop="@+id/btnEngine"
            android:layout_toStartOf="@+id/btnShoot" />

        <TextView
            android:text="Health: 15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joystickHealth"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:padding="10sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Shield: 15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joystickShields"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:padding="10sp"
            android:layout_below="@+id/joystickHealth"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
