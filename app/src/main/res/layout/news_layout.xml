<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/internalElements"
        android:padding="10sp"
        android:elevation="2dp"
        android:layout_margin="5sp">

        <TextView
            android:text="New version ciao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/news_title"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_margin="2sp" />

        <TextView
            android:text="12/06/2017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/news_date"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/news_title"
            android:textSize="18sp"
            android:textColor="@color/inputHint"
            android:layout_margin="2sp"
            android:textColorHighlight="@color/inputHint"
            android:textAlignment="textEnd" />

        <TextView
            android:text="Qui il contenuto\nCiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_title"
            android:layout_alignParentStart="true"
            android:id="@+id/news_content"
            android:layout_alignEnd="@+id/news_date"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:layout_margin="2sp" />
    </RelativeLayout>
</LinearLayout>
